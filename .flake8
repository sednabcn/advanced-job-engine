[flake8]
max-line-length = 100
extend-ignore = E203, E266, E501, W503, F401
exclude = 
    .git,
    __pycache__,
    docs,
    build,
    dist,
    .eggs,
    *.egg,
    .venv,
    venv,
    .pytest_cache,
    .mypy_cache,
    .tox
max-complexity = 25
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
     src/python_advanced_job_engine.py:C901
    .github/scripts/validate_campaign.py:C901
    src/utils/fix_indentation.py:C901