[flake8]
# Maximum line length
max-line-length = 100

# Ignore specific error codes
ignore = 
    E203,  # Whitespace before ':' (conflicts with black)
    E501,  # Line too long (handled by black)
    W503,  # Line break before binary operator (conflicts with black)
    E402,  # Module level import not at top of file
    
# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    .tox,
    venv,
    env,
    .venv,
    build,
    dist,
    *.egg-info,
    .eggs,
    htmlcov,
    docs/_build,

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F811

# Show source code for each error
show-source = True

# Show the specific error code
show-pep8 = True

# Count errors
count = True

# Display statistics
statistics = True